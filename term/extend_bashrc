# By setting ALTERNATE_EDITOR, we enable emacsclient to start a full emacs process if it can't connect to one
export ALTERNATE_EDITOR=emacs
export EDITOR=emacsclient
export VISUAL=emacsclient

# make alias for emacsclient (terminal mode)
alias et='emacsclient -t'
alias logout='sudo pkill -KILL -u $(whoami)'
alias ll='ls -al'

alias nocaps='(dumpkeys | grep keymaps; echo "keycode 58 = Control") | sudo loadkeys'
